
<div class="flex justify-center items-center w-11/12 h-screen rounded-lg">
    <div class="flex h-5/6 rounded-lg shadow-xl shadow-slate-300">
        <nav
            class="w-44 border-r border-r-slate-300 flex flex-col bg-gray-700 text-center text-gray-50 pt-5 rounded-l-md">
            <div class="border-b border-b-slate-300 rounded-b-md flex justify-center">
                <h1 class="text-3xl font-bold mb-4">ToDone</h1>
            </div>
            <div class="flex-col w-full justify-center text-center">
                <button id="addTodoBtn"
                    class="0 w-11/12 text-lg font-semibold text-gray-50 py-1 rounded-md mt-4 hover:bg-gray-500 focus:outline-none focus:ring focus:ring-gray-400">
                    Add Todo
                </button>

                <button id="logoutBtn"
                    class="0 w-11/12 text-lg font-semibold text-gray-50 py-1 rounded-md mt-4 hover:bg-gray-500 focus:outline-none focus:ring focus:ring-gray-400">
                    Logout
                </button>
            </div>
        </nav>
        {{!-- todo list container --}}
        {{!-- Verify that it is taking the #each inside the task body partials --}}
        {{#if lists.length}}
        <div class="flex-1 p-8 overflow-hidden bg-slate-50 rounded-r-md">
            <div class="flex items-center">
                <h2 class="text-2xl text-start font-bold mb-4">Todo List</h2>
            </div>
            {{> taskbody}}
        </div>
        {{/if}}
    </div>
</div>

<div class="fixed inset-0 flex items-center justify-center hidden bg-gray-800 bg-opacity-75" id="newTaskModal">
    <div class="bg-white p-8 max-w-md w-full rounded-lg shadow-lg">
        <form class="newTaskForm">
            <div class="mb-6">
                <label for="newTaskTitle" class="block text-sm font-semibold text-gray-700 mb-2">Task Title</label>
                <input
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-gray-700"
                    type="text" id="newTaskTitle" />
            </div>
            <div class="mb-6">
                <label for="newTaskDueDate" class="block text-sm font-semibold text-gray-700 mb-2">Due Date</label>
                <input
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-gray-700"
                    type="text" id="newTaskDueDate" placeholder=" Month / dd " />
            </div>
            <div class="mb-6">
                <label for="newDescription" class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
                <input
                    class="w-full h-36 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-gray-700 text-center"
                    type="text" id="newDescription"
                    placeholder="Enter your description.&#10; No more than 100 characters" />
            </div>
            <div>
                <button class="w-full bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700" type="submit"
                    >
                    Add Task
                </button>
            </div>
        </form>
    </div>
</div>
<script src="/js/todoPage.js"></script>

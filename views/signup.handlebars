<div class="bg-slate-50 flex items-center justify-center h-screen w-2/3">
    <div class="bg-gray-700 rounded-lg shadow-lg flex items-center text-neutral-900 justify-between h-4/6 w-3/6">
        <div class="w-full p-5 text-center">
            <h2 class="text-5xl text-center font-bold mb-24 text-gray-50">Sign up</h2>
            <form>
                <div class="mb-6">
                    <input type="text" id="signUpUsername" name="Username" placeholder="Username"
                        class="w-1/2 px-4 py-3 border border-primary-color rounded-md focus:outline-none focus:ring-slate-500" />
                </div>
                <div class="mb-6">
                    <input type="email" id="signUpEmail" name="email" placeholder="Email"
                        class="w-1/2 px-4 py-3 border border-primary-color rounded-md focus:outline-none focus:ring-slate-500" />
                </div>
                <div class="mb-6">
                    <input type="password" id="signUpPassword" name="password" placeholder="Password"
                        class="w-1/2 px-4 py-3 border border-primary-color rounded-md focus:outline-none focus:ring-slate-500" />
                </div>
                <button type="submit"
                    class="w-1/3 max-w-sm px-6 py-3 bg-accent-color text-primary-color rounded-md hover:bg-opacity-80 focus:outline-none focus:ring-slate-50 border text-gray-50"
                    id="signUpSubmit">
                    Sign up
                </button>
            </form>
        </div>
    </div>
</div>


<div class="fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-75">
    <div class="bg-white p-8 max-w-md w-full rounded-lg shadow-lg">
        <form class="form login-form">
            <div class="mb-6">
                <label for="newTaskTitle" class="block text-sm font-semibold text-gray-700 mb-2">Task Title</label>
                <input
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-slate-700"
                    type="text" id="newTaskTitle" />
            </div>
            <div class="mb-6">
                <label for="newTaskDueDate" class="block text-sm font-semibold text-gray-700 mb-2">Due Date</label>
                <input
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-slate-700"
                    type="text" id="newTaskDueDate" placeholder=" Month / dd " />
            </div>
            <div class="mb-6">
                <label for="newDescription" class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
                <input
                    class="w-full h-36 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-slate-700 text-center"
                    type="password" id="newDescription"
                    placeholder="Enter your description.&#10; No more than 100 characters" />
            </div>

            <div>
                <button class="w-full bg-slate-600 text-white px-4 py-2 rounded-md hover:bg-slate-700" type="submit"
                    id="submitNewTask">
                    Add Task
                </button>
            </div>
        </form>
    </div>
</div>